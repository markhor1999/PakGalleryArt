<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBackground"
    tools:context=".PurchasePostActivity">
    <include
        android:id="@+id/purchase_toolbar"
        layout="@layout/app_bar_layout" />
    <LinearLayout
        android:id="@+id/header_linear_layout"
        android:layout_below="@id/purchase_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/post_background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/purchase_person_profile_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/profile" />
        <TextView
            android:id="@+id/purchase_profile_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Full Name"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/ColorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/person_profile_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Contact"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="7dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
        <Button
            android:id="@+id/post_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            style="?attr/materialButtonOutlinedStyle" />
    </LinearLayout>




</RelativeLayout>